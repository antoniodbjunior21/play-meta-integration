# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                                      controllers.Dashboard.abrirDashboard()
GET         /login                                 controllers.Acesso.login()
GET         /register                              controllers.Acesso.register()
POST        /autenticar                            controllers.Acesso.autenticar()
GET         /create                                controllers.Acesso.create()
GET         /logout                                controllers.Acesso.logout()
GET         /facebook                              controllers.FacebookConfiguracoes.abrirPainelIntegracao()
GET         /facebook/configuracoes                controllers.FacebookConfiguracoes.abrirPainelAplicativo()
POST        /facebook/configuracoes/salvar         controllers.FacebookConfiguracoes.salvarAppId()
GET         /facebook/webhook                      controllers.FacebookWebhooks.validacaoWebhook()
POST        /facebook/webhook                      controllers.FacebookWebhooks.webhook()
GET         /facebook/webhook/recebidos            controllers.FacebookWebhooks.recebidos()
GET         /facebook/webhook/excluir              controllers.FacebookWebhooks.excluir()
GET         /facebook/webhook/excluir/todos        controllers.FacebookWebhooks.excluirTodos()
GET         /facebook/pages-tokens                 controllers.FacebookWebhooks.pagesTokens()
GET         /facebook/cadastrar-webhook            controllers.FacebookWebhooks.setWebhook()
GET         /facebook/apps-instalados              controllers.FacebookWebhooks.instaledApps()
GET         /facebook/user                         controllers.FacebookWebhooks.user()

# Facebook

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                          controllers.Assets.versioned(path="/public", file: Asset)
