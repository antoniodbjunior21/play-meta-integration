# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                                      controllers.Dashboard.abrirDashboard()
GET         /login                                 controllers.Acesso.login()
POST        /autenticar                            controllers.Acesso.autenticar()
GET         /create                                controllers.Acesso.create()
GET         /logout                                controllers.Acesso.logout()
GET         /facebook                              controllers.Facebook.abrirPainel()
GET         /facebook/webhook                      controllers.Facebook.validacaoWebhook()
POST        /facebook/webhook                      controllers.Facebook.webhook()
GET         /facebook/webhook/recebidos            controllers.Facebook.recebidos()
GET         /facebook/webhook/excluir              controllers.Facebook.excluir()
GET         /facebook/webhook/excluir/todos        controllers.Facebook.excluirTodos()
GET         /facebook/pages-tokens                 controllers.Facebook.pagesTokens()
GET         /facebook/cadastrar-webhook            controllers.Facebook.setWebhook()
GET         /facebook/apps-instalados              controllers.Facebook.instaledApps()
GET         /facebook/user                         controllers.Facebook.user()

# Facebook

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                          controllers.Assets.versioned(path="/public", file: Asset)
